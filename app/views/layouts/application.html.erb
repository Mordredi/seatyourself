<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= link_to "SeatYourself", root_path %>
    <%= link_to "Restaurants", restaurants_path %>
    <% if current_user %>
      <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %> <%= link_to "New Restaurant", new_restaurant_path %> <%= link_to "Logout", session_path("current"), :method => :delete %>
    <% else %>
      <%= link_to  "Sign Up", new_user_path %>
      <%= link_to "Login", login_path %>
    <% end %>
  </header>
<%= yield %>

</body>
</html>
