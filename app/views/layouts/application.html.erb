<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= link_to "SeatYourself", root_path %>
    <nav>
      <% if current_user %>
        <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user), :class => 'btn' %> <%= link_to "New Restaurant", new_restaurant_path, :class => 'btn' %> <%= link_to "Logout", session_path("current"), :method => :delete, :class => 'btn' %>
      <% else %>
        <%= link_to  "Sign Up", new_user_path, :class => 'btn btn-signup' %>
        <%= link_to "Login", login_path, :class => 'btn' %>
      <% end %>
      <%= link_to "Restaurant Listings", restaurants_path, :class => 'btn' %>
    </nav>
  </header>
  <main>
    <%= yield %>
  </main>
</body>
</html>
