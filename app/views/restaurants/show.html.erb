<%= image_tag @restaurant.image_url %>

<%= form_for([@restaurant, @reservation]) do |f| %>
  <%= f.label :num_of_seats %>
  <%= f.number_field :num_of_seats %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :time %>
  <%= f.time_field :time %>
  <%= f.button %>
<% end %>


<%= @restaurant.name %>
<%= @restaurant.address %>
<%= @restaurant.open_time %>
<%= @restaurant.close_time %>
<%= @restaurant.description %>
