<div class="user-wrapper">
  <div class="sidebar">
    <%= image_tag @user.avatar_url, :class => 'avatar' %>
    <ul>
      <li><h2><%= @user.first_name %> <%= @user.last_name %></h2></li>
      <li><%= @user.created_at %></li>
      <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>
      <li><%= link_to "Create Restaurant", new_restaurant_path %></li>
    </ul>
  </div>
  <div class="article">
    <h2>About</h2>
    <%= @user.about %>

    <h2>Reservations</h2>
      <ul>
      <% @reservations.each do |reservation| %>
        <li>Where: <%= reservation.restaurant.name %></li> 
        <li>When:<%= m_to_st(reservation.time) %> <%= reservation.date %></li>
        <li>For: <%= reservation.num_of_seats %></li>
      <% end %>
    </ul>
  </div>
</div>