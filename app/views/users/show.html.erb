<div class="user-wrapper">
  <div class="sidebar">
    <%= image_tag @user.avatar_url, :class => 'avatar' %>
    <ul>
      <li><%= @user.first_name %> <%= @user.last_name %></li>
      <li><%= @user.created_at %></li>
      <li><%= link_to "Edit Profile", edit_user_path(@user) %></li>
      <li><%= link_to "Create Restaurant", new_restaurant_path %></li>
    </ul>
  </div>
  <div class="article">
    <%= @user.about %>

    <h3>Reservations</h3>
      <ul>
      <% @reservations.each do |reservation| %>
        <li><%= reservation.restaurant.name %> <%= reservation.time %>  <%= reservation.num_of_seats %></li>
      <% end %>
    </ul>
  </div>
</div>